# Fortune Trading Platform Environment Variables

# MongoDB Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=secure_password_here
MONGO_DATABASE=fortune
MONGO_APP_USERNAME=fortune_user
MONGO_APP_PASSWORD=fortune_app_password

# API Configuration
API_KEY=your_api_key_here
SECRET_KEY=your_secret_key_here
MARKET_DATA_URL=https://api.marketdata.com

# Application Configuration
LOG_LEVEL=INFO
NODE_ENV=production

# Redis Configuration (for production)
REDIS_PASSWORD=redis_secure_password

# Trading Configuration
MAX_POSITION_SIZE=100000
RISK_LIMIT_PERCENT=2.0
EMERGENCY_STOP_ENABLED=true

# External Services
BROKER_API_URL=https://api.broker.com
BROKER_API_KEY=your_broker_api_key
BROKER_SECRET=your_broker_secret

# Monitoring
SENTRY_DSN=your_sentry_dsn_here
PROMETHEUS_ENABLED=true 